<div class="container">
  <div class="col-md-8 col-md-offset-2 col-sm-10">
<!--<p><% notice %></p>-->
<h1>Twitter一覧</h1>
<%= link_to "ツイートする", new_tweet_path, class: 'btn btn-default' %>
<% @tweets.each do |tweet| %>
  <p>ツイート:<%= tweet.content %></p>
  <%= link_to "つぶやきを編集する", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
  <%= link_to "つぶやきを削除する", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger'  %>
<% end %>

</div>
</div>